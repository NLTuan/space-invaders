<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane fx:id="animationPanel" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="bgImage" pickOnBounds="true" />
      <HBox fx:id="tipHBox" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="600.0">
         <children>
            <Text fx:id="tipText" fill="#ffffff80" strokeType="OUTSIDE" strokeWidth="0.0" text="Use WASD to move, SPACE to shoot, 'E' to switch weapons" textAlignment="RIGHT" />
         </children>
      </HBox>
      <VBox fx:id="gameOverVBox" alignment="CENTER" opacity="0.0" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="GAME OVER" />
            <Text fx:id="gameOverScoreText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
            <Button fx:id="replayButton" disable="true" mnemonicParsing="false" text="Play again" />
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Text fx:id="stageText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Stage: ">
               <font>
                  <Font size="17.0" />
               </font>
            </Text>
            <Text fx:id="livesText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Lives: " />
            <Text fx:id="scoreText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Score: 0" />
         </children>
      </VBox>
      <VBox fx:id="gameCompleteVBox" alignment="CENTER" layoutX="10.0" layoutY="10.0" opacity="0.0" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="GAME COMPLETE!" />
            <Text fx:id="gameCompleteScoreText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
            <Button fx:id="continueButton" disable="true" mnemonicParsing="false" text="Continue Playing" />
            <Button fx:id="replayButtonComplete" disable="true" mnemonicParsing="false" text="Play again" />
         </children>
      </VBox>
   </children>
</Pane>
